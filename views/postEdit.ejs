<%- include('./partial/_head', {title: 'Post Edit'}) %>
<body> 
  <!-- As a heading -->
  <nav class="navbar bg-body-tertiary">
    <div class="container-fluid">
      <span class="navbar-brand mb-0 h1">DIY Platform</span>
    </div>
  </nav>

  <main class="container">
    <% if(errors) { %>
        <% errors = errors.split(",") %>
        <% errors.forEach(el => { %>
            <p style="color: red;"><%= el %></p>
        <% }) %>
    <% } %>
    <h1>Edit New Post</h1>
    <form action="/posts/<%= data.id %>/edit" method="post">
        <div>
            <label for="title">Title</label>
            <input type="text" name="title" id="title" value="<%= data.title %>"/>
        </div>
        <div>
            <div>
                <label for="AuthorId">Author</label>
                <select type="text" name="AuthorId" id="AuthorId">
                    <option value="null" selected disabled>Choose</option>
                    <% authors.forEach(el => { %>
                        <option value="<%= el.id %>" <%= el.id === data.AuthorId ? 'selected' : '' %>><%= el.fullName %></option>
                    <% }) %>
                </select>
            </div>
            <div>
                <label for="">Difficulty</label>
                <select type="text" name="difficulty" id="difficulty">
                    <option value="Easy" <%= data.difficulty === "Easy" ? 'selected' : '' %>>Easy</option>
                    <option value="Medium" <%= data.difficulty === "Medium" ? 'selected' : '' %>>Medium</option>
                    <option value="Hard" <%= data.difficulty === "Hard" ? 'selected' : '' %>>Hard</option>
                </select>
            </div>
            <div>
                <label for="estimatedTime">Estimated Time</label>
                <input type="number" name="estimatedTime" id="estimatedTime" value="<%= data.estimatedTime %>"/>
                <label for="estimatedTime">Minutes</label>
            </div>
            <div>
                <label for="imageUrl">Image Url</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<%= data.imageUrl %>"/>
            </div>
            <div>
                <label for="createdDate">Created Date</label>
                <input type="date" name="createdDate" id="createdDate" value="<%= data.createdDate.toISOString().split('T')[0] %>"/>
            </div>
            <div>
                <label for="description">Description</label> <br>
                <textarea name="description" id="description" rows="10" cols="50"><%= data.description %></textarea>
            </div>
            <input type="text" hidden name="totalVote" value="<%= data.totalVote %>">
        </div>
        <button type="submit" class="btn btn-dark">Submit</button>
    </form>
  </main>
</body>
</html>